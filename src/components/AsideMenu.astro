---
import Library from "../icons/Library.astro";
import Home from "../icons/Home.astro";
import SideMenuItem from "./SideMenuItem.astro";
import Search from "../icons/Search.astro";
import { playlists } from "../lib/data";
import SideMenuCard from "./SideMenuCard.astro";
import Plus from "../icons/Plus.astro";
import ViewMore from "../icons/ViewMore.astro";
import AsideLibraryFilterSearch from "./AsideLibraryFilterSearch.astro";
const chips = ["Playlists", "Artistas", "√Ålbumes"];
---

<nav class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg p-2">
    <ul class="py-2 px-4 flex flex-col gap-4">
      <SideMenuItem href="/">
        <Home />
        Inicio
      </SideMenuItem>
      <SideMenuItem href="/">
        <Search />
        Buscar
      </SideMenuItem>
    </ul>
  </div>
  <div class="bg-zinc-900 rounded-lg flex-1">
    <div class="flex items-start justify-start flex-col gap-4 py-2 pl-6 pr-4">
      <header class="flex items-center gap-4 w-full">
        <SideMenuItem href="/">
          <Library />
          Tu biblioteca
        </SideMenuItem>
        <span
          class="ml-auto w-8 h-8 text-zinc-400 hover:text-zinc-100 rounded-full cursor-pointer hover:bg-zinc-800 p-2"
        >
          <Plus />
        </span>
        <span
          class="w-8 h-8 text-zinc-400 hover:text-zinc-100 rounded-full cursor-pointer hover:bg-zinc-800 p-2"
        >
          <ViewMore />
        </span>
      </header>
      <div class="flex gap-4 justify-start items-start">
        {
          chips.map((chip) => (
            <span class="text-sm font-normal cursor-pointer hover:bg-zinc-700 text-zinc-100 bg-zinc-800 px-3 py-1 rounded-full ">
              {chip}
            </span>
          ))
        }
      </div>
    </div>
    <div class="px-2 flex flex-col gap-2">
      <AsideLibraryFilterSearch />
      <ul>
        {playlists.map((playlist) => <SideMenuCard playlists={playlist} />)}
      </ul>
    </div>
  </div>
</nav>
