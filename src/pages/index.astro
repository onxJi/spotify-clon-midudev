---
import Layout from "../layouts/Layout.astro";
import { playlists } from "../lib/data";
import PlayListItemCard from "../components/PlayListItemCard.astro";
import { Greeting } from "../components/Greeting";
---

<Layout title="Spotify Clone with Midudev">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-green-600"
  >
    <!-- Page Header -->
    <div class="relative z-10 px-6 pt-10">
      <!-- Grettings! This is the Spotify Clone with Astro and Tailwind CSS by Midudev. -->
      <Greeting client:load />
      <div class="flex flex-wrap mt-6 gap-4">
        {playlists.map((playlist) => <PlayListItemCard playlists={playlist} />)}
      </div>
      <div
        class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80 -z-[1]"
      >
      </div>
    </div>
  </div>
</Layout>

